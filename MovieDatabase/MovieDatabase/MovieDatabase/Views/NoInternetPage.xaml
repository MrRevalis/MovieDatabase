<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieDatabase.Views.NoInternetPage"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False">
    <Frame>
        <Frame.Background>
            <LinearGradientBrush
                EndPoint="0,1">
                <GradientStop 
                Color="{StaticResource green}"
                Offset="0.1"/>
                <GradientStop 
                Color="{StaticResource backgroundDark}"
                Offset="1.0"/>
            </LinearGradientBrush>
        </Frame.Background>
        <StackLayout>
            <Image
                Source="disconnected.png"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
            <Label
                FontSize="Large"
                TextColor="White"
                HorizontalOptions="Center"
                Text="No connection"/>
        </StackLayout>
    </Frame>
</ContentPage>